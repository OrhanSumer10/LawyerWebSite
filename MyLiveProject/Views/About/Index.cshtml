@model MyLiveProject.Models.ModelViewControl
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
<body id="body">
    <div class="about">
        <div class="about-top">
            <h4>Kurucu</h4>
            <h2>Bilge GÜLER | Avukat</h2>
        </div>
        <div class="about-bottom">
            @foreach (var item in Model.Adminmodel)
            {
                if (item != null)
                {
                    <div class="about-img">
                        <img src='@(item.ImageUrl ?? "")' />
                    </div>
                    <div class="about-me">
                        <p>
                            @(item.ShortDescription ?? "")
                        </p>
                    </div>
                }
            }
        
        </div>
    </div>
</body>
</html>

