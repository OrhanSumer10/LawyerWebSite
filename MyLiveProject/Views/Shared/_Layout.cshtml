                    </li>
                    <li>
                        <a href="/Home#Dava-home" id="btnA">Çalışma Alanları</a>
                    </li>
                    <li>
                        <a href="/Makale" id="btnA">Makaleler</a>
                    </li>
                    <li>
                        <a href="/Contact" id="btnA">İletişim</a>
                    </li>
                </ul>
            </div>
        </div>

    </header>
    <main>
        <a onclick="topFunction()" id="go-up"><span><i class="fa-solid fa-arrow-up"></i></span></a>
        <div id="google_translate_element">
            <div id=":0.targetLanguage">
      
      
            </div>
        </div>
        @RenderBody()
    </main>

    @await Html.PartialAsync("~/Views/Shared/footer.cshtml")


   

    <script src="/js/app.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>

