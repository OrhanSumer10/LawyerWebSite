@model EntityLayer.Concrete.Admin
@{
    ViewData["Title"] = "UpdateContent";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<html>
<body>
    <h2 class="text-center">İÇERİKLER</h2>
    <div class="s-content">
        @using (Html.BeginForm("UpdateContent", "Settings", FormMethod.Post))
        {
            @Html.Label("Profil Resmi")
            @Html.TextBoxFor(x=>x.ImageUrl, new{@class = "form-control"})
            <br />
            @Html.Label("Kullanıcı Adı")
            @Html.TextBoxFor(x=>x.UserName, new{@class = "form-control"})
            <br />
            @Html.Label("Hakkımda Açıklama")
            @Html.TextAreaFor(x=>x.ShortDescription, new{@class = "form-control"})
            <br />
            @Html.Label("Anasayfa Banner")
            @Html.TextBoxFor(x=>x.Banner, new{@class = "form-control"})
            <br />
            @Html.Label("Adres")
            @Html.TextBoxFor(x=>x.Adress, new{@class = "form-control"})
            <br />
            @Html.Label("İnstagram")
            @Html.TextBoxFor(x=>x.InstagramAdress, new{@class = "form-control"})
            <br /> @Html.Label("Facebook")
            @Html.TextBoxFor(x=>x.FacebookAdress, new{@class = "form-control"})
            <br />
            <br /> @Html.Label("Telefon")
            @Html.TextBoxFor(x=>x.PhoneNumber, new{@class = "form-control"})
            <br />
            @Html.HiddenFor(x=>x.AdminID)
            <button class="btn btn-info"> Güncelle</button>
        }
    </div>
</body>
</html>

