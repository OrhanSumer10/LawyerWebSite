@using X.PagedList;
@using X.PagedList.Mvc.Core
@using EntityLayer.Concrete
@using X.PagedList.Web.Common;
@model IPagedList<Makale>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<html>
<body>
    <h2 class="text-center">MAKALE</h2>
    <div class="am-content">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>BAŞLIK</th>
                    <th>İÇERİK</th>
                    <th>KATEGORİ</th>
                    <th>IMAGE</th>
                    <th>TARİH</th>
                    <th>DURUM</th>
                    <th>DETAYLAR</th>
                    <th>GÜNCELLE</th>
                    <th>SİL</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.MakaleID</td>
                        <td>@item.MakaleTitle</td>
                        <td> @item.MakaleContent.Substring(0,item.MakaleContent.Substring(0,10).LastIndexOf(" "))...</td>
                        <td>@item.category!.CategoryName</td>
                        <td>@item.MakaleTitle Resmi</td>
                        <td>@(((DateTime)item.MakaleCreateDate).ToString("dd-MMMM-yyyy")))</td>
                        @if (item.MakaleStatus == true)
                        {
                            <td><button type="button" class="btn btn-success">  <i class="fa-solid fa-check"></i></button></td>
                        }
                        else
                        {
                            <td>
                                <button type="button" class="btn btn-danger">
                                    <i class="fa-solid fa-close"></i>
                                </button>
                            </td>
                        }
                        <td><a href="/Makale/ReadMakale/@item.MakaleID" type="button" target="_blank" class="btn btn-outline-primary">DETAYLAR</a></td>
                        <td><a href="/AdminMakale/updateMakale/@item.MakaleID" type="button" class="btn btn-outline-warning">GÜNCELLE</a></td>
                        <td><a href="/AdminMakale/deleteMakale/@item.MakaleID" type="button" class="btn btn-outline-danger">SİL</a></td>
                    </tr>
                }

            </tbody>
        </table>
        @Html.PagedListPager((IPagedList)Model,page=>Url.Action("Index",new {page}),   new PagedListRenderOptions {
        DisplayLinkToIndividualPages = true,
        DisplayPageCountAndCurrentLocation = false,
        MaximumPageNumbersToDisplay = 10,
        LiElementClasses = new string[] { "page-item" },
        PageClasses = new string[] { "page-link" },
        })
    </div>
    <a href="/AdminMakale/addMakale" type="button" class="btn btn-outline-primary btn-add">Yeni Makale Ekle &nbsp; <i class="fa-solid fa-file-circle-plus"></i></a>
</body>
</html>

