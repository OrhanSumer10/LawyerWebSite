@model MyLiveProject.Models.ModelViewControl
@{
    ViewData["Title"] = "ReadMakale";
    Layout = "_Layout";
}

<html>
<body>
    <div class="m-content">
        <h2>MAKALE</h2>
        <div class="m-content-b">
            <div class="m-content-b-top-rm">
                @foreach (var item in Model.makalemodel)
                {                    
                    <h2>@item.MakaleTitle</h2>
                    <img src="@item.MakaleImage" />
                    <p>@item.MakaleContent</p>
                }  

            </div>
            <div id="sub-mak-page">
                <div class="sub">
                    @await Html.PartialAsync("~/Views/AdminSub/Subscribe.cshtml")
                </div>
            </div>
        </div>

    </div>
</body>
</html>

